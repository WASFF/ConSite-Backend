#!/usr/bin/env ruby
require 'pathname'
require 'open3'

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../',  __FILE__)

def redirect(binpath)
  Open3.popen3(binpath) do |input, output, error|
    input_thread = Thread.new do
      while true
        input.write STDIN.getc
      end
    end

    output_thread = Thread.new do
      while !output.eof?
        char = output.readchar
        print char
      end
    end

    output_thread.join
  end

end

Dir.chdir APP_ROOT do
  puts "== Installing dependencies =="
  system "gem install bundler --conservative"
  system "bundle check || bundle install"

  puts "\n== Copying sample files =="

  unless File.exist?("config/database.yml")
    puts "\n== Database Config =="
    redirect 'bin/initial_setup/database'
  end

  unless File.exist?("config/secrets.yml")
    puts "\n== Secrets Config =="
    print `bin/initial_setup/secrets`
  end

  puts "\n== Preparing database =="
  system "bin/rake db:setup"

  puts "\n== Removing old logs and tempfiles =="
  system "rm -f log/*"
  system "rm -rf tmp/cache"

  puts "\n== Restarting application server =="
  system "touch tmp/restart.txt"
end
